<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_stock_config_settings" model="ir.ui.view">
            <field name="name">mERP Demo - Stock Settings</field>
            <field name="model">stock.config.settings</field>
            <field name="inherit_id" ref="stock.view_stock_config_settings"/>
            <field name="arch" type="xml">
                <group name="traceability" position="after">
                    <group string="mERP Application" name="merp_application">
                        <label for="id" string="Custom Access Rights"/>
                        <div>
                            <field name="module_merp_custom_access_rights"/>
                            <label for="module_merp_custom_access_rights"/>
                        </div>
                        <label for="id" string="Picking Wave"/>
                        <div>
                            <field name="module_merp_picking_wave"/>
                            <label for="module_merp_picking_wave"/>
                        </div>
                        <label for="id" string="Outgoing Routing"/>
                        <div>
                            <field name="module_merp_outgoing_routing"/>
                            <label for="module_merp_outgoing_routing"/>
                        </div>
                        <label for="id" string="Smart Skip of Products"/>
                        <div>
                            <field name="module_merp_picking_products_skip"/>
                            <label for="module_merp_picking_products_skip"/>
                        </div>
                        <label for="id" string="Instant Move"/>
                        <div>
                            <field name="module_merp_instant_move"/>
                            <label for="module_merp_instant_move"/>
                        </div>
                        <label for="id" string="Inventory"/>
                        <div>
                            <field name="module_merp_inventory"/>
                            <label for="module_merp_inventory"/>
                        </div>
                        <label for="id" string="Internal Warehouse"/>
                        <div>
                            <field name="module_merp_internal_warehouse"/>
                            <label for="module_merp_internal_warehouse"/>
                        </div>
                        <label for="id" string="mERP Version"/>
                        <div>
                            <field name="merp_version" readonly="1"/>
                        </div>
                        <label for="id" string="Customer Logotype"/>
                        <div>
                            <field name="module_merp_custom_logotype"/>
                            <label for="module_merp_custom_logotype"/>
                        </div>
                    </group>
                </group>
            </field>
        </record>

    </data>
</openerp>
